<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signIn.VerifyPhoneActivity">

    <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0dp"
            android:hint="@string/code"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_verify" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="78dp" app:layout_constraintTop_toBottomOf="@+id/et_verification_code"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>